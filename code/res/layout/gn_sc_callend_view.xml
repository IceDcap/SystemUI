<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget46"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imgContactPhoto"
        android:layout_width="96px"
        android:layout_height="96px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="112px"
        android:layout_marginTop="80px"
        android:src="@drawable/gn_fc_picture_unknown_new" />

    <TextView
        android:id="@+id/txtCallinName"
        android:layout_width="110px"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/imgContactPhoto"
        android:layout_below="@+id/imgContactPhoto"
        android:layout_marginTop="15px"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtCallinNum"
        android:layout_width="110px"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txtCallinName"
        android:layout_below="@+id/txtCallinName"
        android:layout_marginTop="10px"
        android:gravity="center"
        android:textSize="16sp" />

</RelativeLayout>