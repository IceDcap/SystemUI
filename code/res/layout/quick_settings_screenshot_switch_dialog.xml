<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screenshot_switch_dialog_view"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:paddingTop="8dip"
    android:paddingBottom="14dip"
    >
    <LinearLayout
        android:id="@+id/normal_screenshot"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/normal_screenshot_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/gn_qs_tile_background"
            android:src="@drawable/normal_screenshot__off"
            />
        <TextView 
            android:id="@+id/normal_screenshot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/gn_qs_normal_screen_shot"
            android:textColor="@color/gn_qs_tile_off"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/long_screenshot"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/long_screenshot_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/gn_qs_tile_background"
            android:src="@drawable/long_screenshot_off"
            />
        <TextView 
            android:id="@+id/long_screenshot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/gn_qs_long_screen_shot"
            android:textColor="@color/gn_qs_tile_off"
            />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/part_screenshot"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/part_screenshot_icon"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:background="@drawable/gn_qs_tile_background"
            android:src="@drawable/part_screenshot_off"
            />
        <TextView 
            android:id="@+id/part_screenshot_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="@string/gn_qs_part_screen_shot"
            android:textColor="@color/gn_qs_tile_off"
            />
    </LinearLayout>
</LinearLayout>
