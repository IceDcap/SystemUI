<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:amigo="http://schemas.android.com/apk/res/amigo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <amigo.widget.AmigoTextView
        android:id="@+id/confirm_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:minHeight="64dp"
        android:text="@string/usb_debugging_message"
        android:textColor="#CC000000"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/confirm_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <amigo.widget.AmigoCheckBox
            android:id="@+id/alwaysUse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true" />

        <amigo.widget.AmigoTextView
            android:id="@+id/clearDefaultHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/usb_debugging_always"
            android:textColor="#66000000"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>