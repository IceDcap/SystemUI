<?xml version="1.0" encoding="utf-8"?>
<com.android.systemui.gionee.cc.GnControlCenterShortcut
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gn_shortcut_panel"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="10dp"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/sc_torch_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/sc_torch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/gn_ic_sc_torch_off"
            android:background="@drawable/gn_sc_tile_background" />

        <TextView
            android:id="@+id/sc_torch_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sc_torch"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gn_sc_tile_text_padding_top"
            android:text="@string/gn_sc_torch"
            android:textSize="@dimen/gn_qs_tile_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sc_fake_call_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
        
        <FrameLayout
            android:id="@+id/sc_fake_call_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true" >
            
            <ImageView
                android:id="@+id/sc_fake_call_background"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:clickable="false"
                android:visibility="gone"
                android:src="@drawable/gn_sc_fake_call_anim" />

            <ImageView
                android:id="@+id/sc_fake_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/gn_sc_tile_background"
                android:clickable="true"
                android:src="@drawable/gn_ic_sc_fake_call" />
            
        </FrameLayout>

        <TextView
            android:id="@+id/sc_fake_call_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sc_fake_call_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gn_sc_tile_text_padding_top"
            android:text="@string/gn_sc_fake_call"
            android:textSize="@dimen/gn_qs_tile_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/sc_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/gn_ic_sc_calculator"
            android:background="@drawable/gn_sc_tile_background" />

        <TextView
            android:id="@+id/sc_calculator_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sc_calculator"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gn_sc_tile_text_padding_top"
            android:text="@string/gn_sc_calculator"
            android:textSize="@dimen/gn_qs_tile_text_size" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/sc_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/gn_ic_sc_camera"
            android:background="@drawable/gn_sc_tile_background" />

        <TextView
            android:id="@+id/sc_camera_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sc_camera"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/gn_sc_tile_text_padding_top"
            android:text="@string/gn_sc_camera"
            android:textSize="@dimen/gn_qs_tile_text_size" />
    </RelativeLayout>
    
</com.android.systemui.gionee.cc.GnControlCenterShortcut>