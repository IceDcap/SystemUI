<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/haokan_category_title_height"
        android:layout_marginLeft="@dimen/haokan_category_title_margin_left"
        android:gravity="center_vertical"
        android:text="@string/haokan_wallpaper_subscription"
        android:textColor="#ffffff"
        android:textSize="@dimen/haokan_category_title_textsize" />

    <GridView
        android:id="@+id/haokan_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="9dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:horizontalSpacing="2dp"
        android:numColumns="3"
        android:verticalSpacing="16dp" >
    </GridView>

</LinearLayout>