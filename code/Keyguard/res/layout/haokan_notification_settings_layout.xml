<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:id = "@+id/haokan_notification_settings"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/haokan_notification_image_settings"
        android:layout_width="@dimen/haokan_notification_layout_settings_image_width"
        android:padding="@dimen/haokan_notification_layout_settings_padding_h"
        android:layout_height="match_parent"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/haokan_notification_settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#222222"
            android:textSize="@dimen/haokan_notification_layout_settings_textsize" />

        <TextView
            android:id="@+id/haokan_notification_settings_content"
            android:layout_marginTop = "@dimen/haokan_notification_layout_settings_gap_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#888888"
            android:textSize="@dimen/haokan_notification_layout_settings_content_textsize" />
    </LinearLayout>

</LinearLayout>