<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/guide_slide_feedback"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="gone"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/guide_slide_feedback_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dp"
        android:src="@drawable/guide_slide_feedback_left" />

    <ImageView
        android:id="@+id/guide_slide_feedback_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp"
        android:src="@drawable/guide_slide_feedback_right" />

</RelativeLayout>
