<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:background="@drawable/haokan_notification_bg"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/haokan_notification_image"
        android:layout_width="@dimen/haokan_notification_layout_image_width"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/haokan_notification_layout_text_marginLeft"
        android:layout_toLeftOf="@+id/haokan_notification_player_or_pause"
        android:layout_toRightOf="@+id/haokan_notification_image"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/haokan_main_layout_music"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/haokan_notification_layout_musicname_textsize" />

        <TextView
            android:id="@+id/haokan_main_layout_Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/haokan_notification_layout_artist_textsize" />
    </LinearLayout>

    <ImageView
        android:id="@+id/haokan_notification_close"
        android:layout_width="@dimen/haokan_notification_layout_button_size"
        android:layout_height="@dimen/haokan_notification_layout_button_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/haokan_notification_layout_close_marginright"
        android:background="@drawable/haokan_notification_music_close" />

    <ImageView
        android:id="@+id/haokan_notification_player_or_pause"
        android:layout_width="@dimen/haokan_notification_layout_button_size"
        android:layout_height="@dimen/haokan_notification_layout_button_size"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/haokan_notification_layout_player_marginright" />

</RelativeLayout>