<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:amigo="http://schemas.android.com/apk/res/amigo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp">

    <amigo.widget.AmigoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="10dp"
        android:text="@string/forget_password_content"
        android:textSize="@dimen/amigo_unbind_account_text_size" />

    <amigo.widget.AmigoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password_first"
        android:textSize="@dimen/amigo_unbind_account_text_size"
        android:paddingTop="20dp" />

    <amigo.widget.AmigoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password_second"
        android:textSize="@dimen/amigo_unbind_account_text_size"
        android:paddingTop="20dp" />

    <amigo.widget.AmigoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password_third"
        android:textSize="@dimen/amigo_unbind_account_text_size"
        android:paddingTop="20dp" />

    <amigo.widget.AmigoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forget_password_end"
        android:textSize="@dimen/amigo_unbind_account_text_size"
        android:paddingTop="20dp" />

</LinearLayout>
