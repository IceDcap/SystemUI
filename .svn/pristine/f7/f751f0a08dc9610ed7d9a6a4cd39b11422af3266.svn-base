<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black" >

    <RelativeLayout
        android:id="@+id/skylight_bg_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <FrameLayout
            android:id="@+id/skyligt_window"
            android:layout_width="match_parent"
            android:layout_height="@dimen/skylight_height"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <com.amigo.navi.keyguard.skylight.SkyPagerView
                android:id="@+id/zzzzz_gn_navil_id_app_widget_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center" />

            <com.amigo.navi.keyguard.skylight.KeyguardPagerIndicator
                android:id="@+id/zzzzz_gn_navil_id_indicator"
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="23dp"
                android:visibility="invisible" />
        </FrameLayout>
    </RelativeLayout>

</RelativeLayout>
