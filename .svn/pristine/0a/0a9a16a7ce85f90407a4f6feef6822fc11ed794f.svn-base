<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:amigo="http://schemas.android.com/apk/res/amigo"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:scrollbarStyle="outsideOverlay" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <amigo.widget.AmigoTextView
                android:id="@+id/winvista_install_success"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mtp_winvista_help_hint"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="194dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="14dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/gn_ic_mtp_vista_success"
                android:contentDescription="@string/mtp_winvista_help_hint"
                android:scaleType="centerInside" />

            <amigo.widget.AmigoTextView
                android:id="@+id/win_install_fail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mtp_winxp_help_nonresponds"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <amigo.widget.AmigoTextView
                android:id="@+id/fail_hint_step1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mtp_win_fail_step1"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>